{
  "name": "fnncr",
  "build": {
    "args": {
      "GO_VERSION": "1.22.0",
      "ALPINE_VERSION": "3.19",
      "NODE_VERSION": "20.11.0",
      "NPM_VERSION": "latest",
      "GOPLS_VERSION": "latest",
      "GO_AIR_VERSION": "v1.49.0",
      "GO_TEMPL_VERSION": "v0.2.543",
      "GO_MIGRATE_TAG": "postgres",
      "GO_MIGRATE_VERSION": "v4.17.0"
    },
    "dockerfile": "devcontainer.Dockerfile"
  },
  "containerEnv": {
    "PG_DB_USERNAME": "fnncr",
    "PG_DB_PASSWORD": "local_dev",
    "PG_DB_HOST": "127.0.0.1",
    "PG_DB_PORT": "5432",
    "PG_DB_DATABASE": "fnncr_dev"
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "golang.Go",
        "davidanson.vscode-markdownlint",
        "shardulm94.trailing-spaces",
        "IBM.output-colorizer",
        "rangav.vscode-thunder-client",
        "donjayamanne.githistory",
        "streetsidesoftware.code-spell-checker",
        "ckolkman.vscode-postgres",
        "bradlc.vscode-tailwindcss",
        "vscode-icons-team.vscode-icons",
        "zhuangtongfa.material-theme",
        "a-h.templ",
        "tamasfe.even-better-toml",
        "Gruntfuggly.todo-tree",
        "sdras.night-owl",
        "eamodio.gitlens"
      ],
      "settings": {
        "go.useLanguageServer": true,
        "workbench.colorTheme": "Night Owl Light",
        "editor.rulers": [
          80,
          120
        ],
        "editor.formatOnSave": true,
        "editor.fontSize": 16,
        "editor.fontFamily": "'Geist Mono Medium', 'monospace', monospace",
        "editor.fontLigatures": true,
        "editor.quickSuggestions": {
          "other": "on",
          "comments": "off",
          "strings": "on"
        },
        "editor.wordWrap": "wordWrapColumn",
        "editor.wordWrapColumn": 120,
        "files.associations": {
          "*.css": "tailwindcss"
        },
        "terminal.integrated.fontSize": 16,
        "chat.editor.fontSize": 16,
        "markdown.preview.fontFamily": "'Geist Mono Medium', -apple-system, BlinkMacSystemFont, 'Segoe WPC', 'Segoe UI', system-ui, 'Ubuntu', 'Droid Sans', sans-serif",
        "markdown.preview.fontSize": 16,
        "markdown.preview.lineHeight": 1.2,
        "workbench.iconTheme": "vscode-icons",
        "gopls": {
          "ui.semanticTokens": true
        },
        "[templ]": {
          "editor.defaultFormatter": "a-h.templ"
        },
        "tailwindCSS.includeLanguages": {
          "templ": "html"
        },
        "emmet.includeLanguages": {
          "templ": "html"
        }
      }
    }
  },
  "capAdd": [
    "SYS_PTRACE"
  ],
  "securityOpt": [
    "seccomp=unconfined"
  ],
  "containerUser": "vscode",
  "mounts": [
    {
      "source": "${env:HOME}/.ssh",
      "target": "/home/vscode/.ssh:ro",
      "type": "bind"
    }
  ],
  "runArgs": [
    "--network=host"
  ],
  "postCreateCommand": {
    "go:dependencies": "go mod download",
    "db:setup": "bin/setup",
    "npm:dependencies": "npm install"
  }
}