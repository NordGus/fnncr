# !/bin/sh

echo "Setting up project"

echo "Installing golang-migrate"
sudo go install -tags \'$GO_MIGRATE_TAG\' github.com/golang-migrate/migrate/v4/cmd/migrate@$GO_MIGRATE_VERSION

echo "Installing Project Go Dependencies"
go mod download

echo "Installing npm dependencies"
npm install

echo "Running Migrations"
bin/postgresql/migrate up
