package savingsgoals

import "financo/internal/adapters/primary/web/app/views/components"

type SavingGoal interface {
	Name() string
	Covered() int64
	Balance() string
	Remaining() string
}

templ savingsGoal(goal SavingGoal) {
	@components.Preview() {
		<div
			class={
				"row-span-2",
				"w-[3.5rem]",
				"flex justify-center items-center",
			}
		>
			<span class="text-4xl">G</span>
		</div>
		<div class="name m-0 p-0 w-full overflow-x-hidden">
			@components.MarqueeHeading5(goal.Name())
		</div>
		<div
			class={
				"row-span-2",
				"flex justify-center items-center",
			}
		>
			@components.ProgressCircle(goal.Covered())
		</div>
		<div class="flex flex-row-reverse justify-between items-center">
			<span class={ "text-neutral-500" }>
				if goal.Covered() < 100 {
					{ goal.Remaining() }
				}
			</span>
			<span
				class={ "text-green-500" }
			>
				if goal.Covered() > 0 {
					{ goal.Balance() }
				}
			</span>
		</div>
	}
}
