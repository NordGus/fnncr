{
  "name": "fnncr",
  "version": "0.1.0",
  "description": "A personal finances and budgeting application.",
  "author": "Azimetrico Inc.",
  "private": true,
  "scripts": {
    "build:src": "esbuild internal/adapters/primary/web/client/src/*.* --bundle --sourcemap --outdir=internal/adapters/primary/web/dist/src --public-path=/dist/src",
    "build:src:prod": "esbuild internal/adapters/primary/web/client/src/*.* --bundle --outdir=internal/adapters/primary/web/dist/src --public-path=/dist/src",
    "build:css": "tailwindcss -i ./internal/adapters/primary/web/client/assets/application.tailwindcss.css -o ./internal/adapters/primary/web/dist/assets/application.css"
  },
  "dependencies": {
    "htmx.org": "1.9.10"
  },
  "devDependencies": {
    "esbuild": "0.19.11",
    "tailwindcss": "3.4.1"
  }
}